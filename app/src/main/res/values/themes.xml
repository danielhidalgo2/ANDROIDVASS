<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WhatsVass" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/main</item>
        <item name="android:navigationBarColor">@color/main</item>
    </style>

    <style name="Theme.WhatsVass" parent="Base.Theme.WhatsVass" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.WhatsVass</item>
    </style>

    <style name="App.Btn" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/dark</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>